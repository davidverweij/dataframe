// These rules grant access to a node matching the authenticated
// user's ID from the Firebase auth token
// the arduino has unrestricted access due the use of database secrets (root access)
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      },
    },
    "matrices": {
      "$matrixId" : {
        ".read" : "root.child('users').child(auth.uid).child('matrixref').val() === $matrixId",
        ".write" : "root.child('users').child(auth.uid).child('matrixref').val() === $matrixId",
      }
    }
  }
}
